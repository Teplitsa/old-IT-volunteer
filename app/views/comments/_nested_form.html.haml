= form_for [parent, @comment], method: :post, html: { class: 'form-horizontal' } do |f|
  
  - if @comment.errors.any?
    #error_explanation
      %h3
        = pluralize(@comment.errors.count, "error")
        prohibited this @comment from being saved:
      %ul
        - @comment.errors.full_messages.each do |msg|
          .li= msg

  = f.hidden_field :parent_id
  
  .control-group
    = f.text_area :body, col: 30, rows: 3, placeholder: 'оставьте свой комментарий …', :class => "add-@comment-textarea span8"

  .control-group.t-right
    = f.submit 'Отправить', class: 'btn'