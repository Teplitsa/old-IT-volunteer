.span12.task_well
  %h2 Изменение пароля
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f|
    = f.error_notification
    = f.input :reset_password_token, :as => :hidden
    = f.full_error :reset_password_token
    .form-inputs
      = f.input :password, :label => "Новый пароль", :required => true
      = f.input :password_confirmation, :label => "Подтвердите пароль", :required => true
    .form-actions
      = f.button :submit, "Изменить пароль"
  = render "devise/shared/links"
